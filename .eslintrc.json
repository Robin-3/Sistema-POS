{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "semistandard",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {}
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/"
  ]
}