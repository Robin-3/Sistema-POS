---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <Navbar />
  <div class="bg-gray-100 dark:bg-gray-900 p-4 sm:ml-64">
    <div
      class="p-4 border-2 border-gray-200 border-solid rounded-lg bg-white dark:bg-gray-700 dark:border-gray-800 mt-14"
    >
      <slot />
    </div>
  </div>
</Layout>
